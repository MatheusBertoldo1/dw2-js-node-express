<%- include ('partials/header.ejs') %>
    <%- include ('partials/navbar.ejs') %>
        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h1>Alterar clientes</h1>
                    <div class="card-body">
                        <!-- Formulário de edição -->
                        <form action="" method="post">
                            <label for="">Nome do cliente</label>
                            <input type="text" name="nome" placeholder="Insira o nome do cliente" class="form-control" value="<%= cliente.nome %>" required>

                            <label for="">CPF do cliente</label>
                            <input type="text" name="cpf" placeholder="Insira o CPF" class="form-control" value="<%= cliente.cpf %>" required>

                            <label for="">Endereço do cliente</label>
                            <input type="text" name="endereco" placeholder="Insira o endereço" class="form-control mb-4" value="<%= cliente.endereco %>" required>

                            <input type="submit" class="btn btn-success" value="Alterar">
                            <input type="reset" class="btn btn-danger" value="Limpar">
                        </form>
                    </div>
                </div>
            </div>
        </div>
<%- include ('partials/footer.ejs') %>